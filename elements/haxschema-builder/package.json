{
  "name": "@lrnwebcomponents/haxschema-builder",
  "wcfactory": {
    "className": "HaxschemaBuilder",
    "customElementClass": "PolymerElement",
    "elementName": "haxschema-builder",
    "generator-wcfactory-version": "0.7.1",
    "useHAX": true,
    "useSass": false,
    "files": {
      "css": "src/haxschema-builder.css",
      "scss": "src/haxschema-builder.scss",
      "html": "src/haxschema-builder.html",
      "js": "src/haxschema-builder.js",
      "properties": "src/haxschema-builder-properties.json",
      "hax": "src/haxschema-builder-hax.json"
    }
  },
  "version": "2.1.0",
  "description": "dynamically build and visualize HAXschema",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "main": "haxschema-builder.js",
  "module": "haxschema-builder.es6.js",
  "umd": "haxschema-builder.umd.js",
  "amd": "haxschema-builder.amd.js",
  "scripts": {
    "test": "../../node_modules/.bin/wct --configFile ../../wct.conf.json node_modules/@lrnwebcomponents/haxschema-builder/test/",
    "start": "yarn run dev",
    "build": "../../node_modules/.bin/gulp && ../../node_modules/.bin/rollup -c && ../../node_modules/.bin/prettier --ignore-path ../../.prettierignore --write '**/*.{js,json}'",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "../../node_modules/.bin/gulp dev",
    "serve": "polymer serve --npm --module-resolution=node --open",
    "lighthouse": "../../node_modules/.bin/gulp lighthouse"
  },
  "author": {
    "name": "btopro"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@lrnwebcomponents/code-editor": "^2.1.0",
    "@lrnwebcomponents/eco-json-schema-form": "^2.1.0",
    "@lrnwebcomponents/hax-body": "^2.1.0",
    "@lrnwebcomponents/hax-body-behaviors": "^2.1.0",
    "@lrnwebcomponents/json-editor": "^2.1.0",
    "@polymer/polymer": "^3.2.0"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^2.0.9",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "@webcomponents/webcomponentsjs": "2.2.10",
    "concurrently": "4.1.0",
    "gulp-babel": "8.0.0",
    "gulp-sourcemaps": "2.6.5",
    "lodash": "4.17.11",
    "polymer-cli": "1.9.10",
    "wct-browser-legacy": "1.0.2",
    "web-animations-js": "2.3.1"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ]
}
