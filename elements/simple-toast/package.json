{
  "name": "@lrnwebcomponents/simple-toast",
  "wcfactory": {
    "className": "SimpleToast",
    "customElementClass": "PolymerElement",
    "elementName": "simple-toast",
    "generator-wcfactory-version": "0.6.3",
    "useHAX": false,
    "useSass": false,
    "files": {
      "css": "src/simple-toast.css",
      "scss": "src/simple-toast.scss",
      "html": "src/simple-toast.html",
      "js": "src/simple-toast.js",
      "properties": "src/simple-toast-properties.json",
      "hax": "src/simple-toast-hax.json"
    }
  },
  "version": "2.1.0",
  "description": "A singular toast / message for conistency",
  "repository": {
    "type": "git",
    "url": "https://github.com/elmsln/lrnwebcomponents.git"
  },
  "main": "simple-toast.js",
  "module": "simple-toast.es6.js",
  "umd": "simple-toast.umd.js",
  "amd": "simple-toast.amd.js",
  "scripts": {
    "test": "../../node_modules/.bin/wct --configFile ../../wct.conf.json node_modules/@lrnwebcomponents/simple-toast/test/",
    "start": "yarn run dev",
    "build": "../../node_modules/.bin/gulp && ../../node_modules/.bin/rollup -c && ../../node_modules/.bin/prettier --ignore-path ../../.prettierignore --write '**/*.{js,json}'",
    "dev": "concurrently --kill-others \"yarn run watch\" \"yarn run serve\"",
    "watch": "../../node_modules/.bin/gulp dev",
    "serve": "polymer serve --npm --module-resolution=node --open",
    "lighthouse": "../../node_modules/.bin/gulp lighthouse"
  },
  "author": {
    "name": "btopro"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-toast": "^3.0.1",
    "@polymer/polymer": "^3.2.0"
  },
  "devDependencies": {
    "@lrnwebcomponents/deduping-fix": "^2.0.9",
    "@lrnwebcomponents/storybook-utilities": "^2.1.0",
    "@polymer/iron-component-page": "github:PolymerElements/iron-component-page",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "@webcomponents/webcomponentsjs": "2.2.10",
    "concurrently": "4.1.0",
    "gulp-babel": "8.0.0",
    "gulp-sourcemaps": "2.6.5",
    "lodash": "4.17.11",
    "polymer-cli": "1.9.10",
    "wct-browser-legacy": "1.0.2",
    "web-animations-js": "2.3.1"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "html"
  ]
}
